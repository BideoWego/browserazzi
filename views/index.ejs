<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Browserazzi</title>

    <!-- Styles -->
    <link rel="stylesheet" href="/assets/vendor.css">
    <link rel="stylesheet" href="/assets/style.css">
  </head>
  <body>

    <header class="page-header text-center">
      <h1>Browserazzi</h1>
      <div id="banner" class="bg-cover-image"></div>
    </header>

    <main class="container">

      <div class="row">
        <div class="col-xs-12">
          
          <form action="/api/v1/screenshot" class="text-center">
            <h2>URL</h2>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Take a screenshot by URL..." name="url">
            </div>
            <div class="form-group">
              <input type="submit" value="Take a Screenshot!" class="btn btn-lg btn-success">
            </div>
          </form>

        </div>
      </div>

    </main>

    <!-- Scripts -->
    <script src="/assets/vendor.js"></script>
  </body>
</html>

